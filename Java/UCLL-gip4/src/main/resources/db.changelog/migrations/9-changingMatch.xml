                tableName="match"/>

        <renameColumn columnDataType="BOOLEAN"
                      newColumnName="is_winner"
                      oldColumnName="winner_id"
                      remarks="A change in names"
                      schemaName="liquibase"
                      tableName="match"/>-->
    </changeSet>

</databaseChangeLog>