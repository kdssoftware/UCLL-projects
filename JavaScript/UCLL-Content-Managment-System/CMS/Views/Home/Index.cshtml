@model OverviewModel
@{
    ViewData["Title"] = "Overview";
}

<h1 class="ui block header">Overview Courses</h1>
    <div class="ui link cards">
        @foreach (var course in Model.Courses)
        {
            <div class="card">
                <div class="image"><img src="@course.ImgLoc"></div>
                <div class="content">
                    <div class="header">@course.Name</div>
                    <div class="meta"><a>@course.Code</a></div>
                    <div class="description">@course.Description</div>
                </div>
                <div class="extra content">
                    <span class="right floated">Semester @course.Semester</span>
                </div>
            </div>
        }
    </div>