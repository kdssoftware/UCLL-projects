@model Gip.Models.CreateRoleViewModel

@{
    ViewData["Title"] = "Create new role";
}

<h1>Create new role</h1>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="text-uppercase text-center">Create role</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateRole">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Create role" class="btn btn-sm btn-success text-uppercase rounded-0" />
                </form>
            </div>
        </div>
    </div>
</div> 